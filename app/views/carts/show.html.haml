- unless @cart.line_items.empty?
  .page-header
    %h2 Your Cart

  %table.table
      %tr
  
  %td
    = line_item.quantity
    &times;
  %td= line_item.product.product_type
  %td.item_price= number_to_currency(line_item.total_price)
    %tr.total_line
      %td{colspan: 2}Total
      %td.total_cell= number_to_currency(@cart.total_price)

  = button_to 'Checkout', new_order_path, method: :get, class: 'btn btn-danger'
  = button_to 'Empty Cart', @cart, method: :delete, data: {confirm: "Are You Sure?"}, class: 'btn btn-success'